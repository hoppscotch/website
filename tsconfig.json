{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "vite/client",
      "vite-plugin-vue-layouts/client",
      "unplugin-fonts/client",
      "unplugin-icons/types/vue",
      "unplugin-vue-router/client"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  "files": ["components.d.ts", "auto-imports.d.ts", "typed-router.d.ts"]
}
